<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="All Test Cases" verbose="1">
        <test name="Verify user is logged in">
            <parameter name="testRunId1" value="TCTC-1"/>
            <classes>
                <class name="OrangeHrm.Test.LoginTest"/>
            </classes>
        </test>

        <test name="Click Admin Sidebar Option">
            <parameter name="testRunId2" value="TCTC-2">
                <classes>
                    <class name="OrangeHrm.Test.ClickAdminOnMenu"/>
                </classes>
            </parameter>
        </test>

        <test name="Verify user is added">
            <parameter name="testRunId3" value="TCTC-3"/>
            <classes>
                <class name="OrangeHrm.Test.TestToAddAndVerifyUser"/>
            </classes>
        </test>

        <test name="Delete User">
            <parameter name="testRunId4" value="TCTC-4"/>
            <classes>
                <class name="OrangeHrm.Test.DeleteUser"/>
            </classes>
        </test>

    <test name="Apply Leave">
        <parameter name="testRunId5" value="TCTC-5"/>
        <classes>
            <class name="OrangeHrm.Test.ApplyLeave"/>
        </classes>
    </test>
</suite>
